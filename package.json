{
  "name": "dapocss",
  "version": "1.1.0",
  "description": "A lightweight and modern CSS styling framework designed specifically for KEBENET and KEBENET Dapo projects",
  "main": "dist/style.css",
  "scripts": {
    "build": "sass src/main.scss dist/style.css --style=expanded",
    "build:min": "sass src/main.scss dist/style.min.css --style=compressed",
    "build:all": "npm run build && npm run build:min",
    "watch": "sass --watch src/main.scss:dist/style.css --style=expanded",
    "dev": "npm run watch"
  },
  "keywords": [
    "css",
    "sass",
    "framework",
    "kebenet",
    "dapo",
    "responsive",
    "design-system"
  ],
  "author": "KEBENET",
  "license": "MIT",
  "devDependencies": {
    "sass": "^1.89.2"
  },
  "files": [
    "dist/",
    "src/",
    "README.md",
    "LICENSE"
  ]
}