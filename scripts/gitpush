#!/bin/bash

# Check if any arguments (a message) were provided
if [ $# -eq 0 ]; then
  echo "ğŸ›‘ Error: No commit message provided."
  echo "Usage: ./gpush.sh your commit message here"
  exit 1
fi


# Git add all files
echo "ğŸš€ Staging all changes..."
git add .

# Git commit with all arguments as the message. The quotes around "$@" are important!
echo "ğŸ“¦ Committing with message: '$@'"
git commit -m "$@"

# Git push to the main branch
echo "â¬†ï¸ Pushing to the main branch..."
git push origin main

echo "âœ… Success! All changes have been pushed to main."

git status

